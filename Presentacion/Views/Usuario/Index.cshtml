@model IEnumerable<Web.Models.DTOs.UsuarioDTOs.ListadoUsuarioDTO>

@{
    ViewData["Title"] = "Index";
}

<style>
    body {
        background: linear-gradient(135deg, #0f172a, #1e293b);
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
    }

    .usuarios-container {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        min-height: 80vh;
        padding: 30px 20px;
    }

    .usuarios-card {
        width: 100%;
        max-width: 900px;
        background: #0b1120;
        padding: 25px;
        border-radius: 18px;
        box-shadow: 0 20px 40px rgba(15, 23, 42, 0.75);
        border: 1px solid rgba(148, 163, 184, 0.18);
        color: #e5e7eb;
    }

    .usuarios-header {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        margin-bottom: 15px;
        gap: 10px;
    }

        .usuarios-header h1 {
            margin: 0;
            font-size: 1.6rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: #f9fafb;
        }

    .usuarios-badge {
        padding: 4px 10px;
        border-radius: 999px;
        font-size: 0.75rem;
        border: 1px solid rgba(96, 165, 250, 0.7);
        color: #bfdbfe;
        background: radial-gradient(circle at top left, rgba(59, 130, 246, 0.18), transparent);
        align-self: center;
        white-space: nowrap;
    }

    .usuarios-table-wrapper {
        margin-top: 8px;
        border-radius: 14px;
        border: 1px solid rgba(31, 41, 55, 0.9);
        background: radial-gradient(circle at top, rgba(148, 163, 184, 0.08), transparent);
        overflow-x: auto;
    }

    table.table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 6px;
        font-size: 0.9rem;
    }

        table.table thead tr {
            background: rgba(15, 23, 42, 0.95);
        }

        table.table thead th {
            padding: 10px 14px;
            text-transform: uppercase;
            font-size: 0.72rem;
            letter-spacing: 0.07em;
            font-weight: 600;
            color: #9ca3af;
            border-bottom: 1px solid rgba(55, 65, 81, 0.9);
            white-space: nowrap;
        }

        table.table tbody tr {
            background: rgba(15, 23, 42, 0.95);
            transition: transform .15s ease, background .15s ease, box-shadow .15s ease;
        }

            table.table tbody tr:hover {
                background: rgba(30, 64, 175, 0.55);
                transform: translateY(-1px);
                box-shadow: 0 4px 10px rgba(15, 23, 42, 0.7);
            }

        table.table tbody td {
            padding: 9px 14px;
            border-bottom: 1px solid rgba(31, 41, 55, 0.7);
            color: #e5e7eb;
            vertical-align: middle;
            white-space: nowrap;
        }

        table.table tbody tr:last-child td {
            border-bottom: none;
        }

        table.table tbody td:nth-child(1) {
            font-weight: 600;
            color: #bfdbfe;
            font-size: 0.88rem;
        }

    a {
        color: #93c5fd;
        font-weight: 600;
        text-decoration: none;
    }

        a:hover {
            color: #60a5fa;
            text-decoration: underline;
        }

    .alert-danger {
        display: inline-block;
        margin-top: 15px;
        padding: 8px 10px;
        border-radius: 10px;
        background: rgba(239, 68, 68, 0.1);
        color: #fecaca;
        border: 1px solid rgba(248, 113, 113, 0.4);
        font-size: 0.85rem;
    }

    @($"@media") (max-width: 768px) {
        .usuarios-card

    {
        padding: 18px 14px;
    }

    table.table tbody td {
        font-size: 0.82rem;
    }

    .usuarios-header h1 {
        font-size: 1.2rem;
    }

    }
</style>

<div class="usuarios-container">
    <div class="usuarios-card">
        <div class="usuarios-header">
            <h1>Lista de Usuarios</h1>
            <span class="usuarios-badge">@Model?.Count() usuarios</span>
        </div>

        <div class="usuarios-table-wrapper">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Nombre)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Mail)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Mail)
                            </td>
                            <td>
                                @Html.ActionLink("Cambiar Contraseña", "Details", new { id = item.Id })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <span class="alert-danger">@ViewBag.Mensaje</span>
    </div>
</div>
