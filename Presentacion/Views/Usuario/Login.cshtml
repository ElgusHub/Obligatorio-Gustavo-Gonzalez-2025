@model Web.Models.DTOs.UsuarioDTOs.UsuarioLoginDTO

@{
    ViewData["Title"] = "Login";
}

<style>
    body {
        background: linear-gradient(135deg, #0f172a, #1e293b);
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
    }

    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 80vh;
        padding: 20px;
    }

    .login-card {
        width: 100%;
        max-width: 380px;
        background: #0b1120;
        padding: 35px 30px;
        border-radius: 18px;
        box-shadow: 0 20px 40px rgba(15, 23, 42, 0.65);
        border: 1px solid rgba(148, 163, 184, 0.18);
        color: #e5e7eb;
    }

        .login-card h1 {
            text-align: center;
            margin-bottom: 10px;
            color: #f9fafb;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-size: 1.6rem;
        }

        .login-card hr {
            border-color: rgba(148, 163, 184, 0.2);
        }

    label {
        color: #d1d5db !important;
        font-size: 0.9rem;
        margin-bottom: 4px;
    }

    .form-control {
        background: #1e293b;
        border: 1px solid rgba(148, 163, 184, 0.3);
        color: #f1f5f9;
        border-radius: 10px;
        padding: 10px;
        font-size: 0.95rem;
    }

        .form-control:focus {
            background: #1e293b;
            border-color: #60a5fa;
            box-shadow: 0 0 0 2px rgba(96,165,250,.3);
            color: #fff;
        }

    .btn-primary {
        width: 100%;
        border-radius: 12px;
        padding: 10px;
        background: linear-gradient(135deg, #2563eb, #1d4ed8);
        border: none;
        box-shadow: 0 4px 12px rgba(37, 99, 235, 0.4);
        font-weight: 600;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #1d4ed8, #1e40af);
        }

    .alert-success {
        display: block;
        text-align: center;
        margin-top: 15px;
        padding: 8px;
        background: rgba(34, 197, 94, 0.15);
        color: #bbf7d0;
        border: 1px solid rgba(34, 197, 94, 0.4);
        border-radius: 10px;
        font-size: 0.9rem;
    }

    .text-danger {
        font-size: 0.85rem;
    }
</style>


<div class="login-container">
    <div class="login-card">

        <h1>Login</h1>
        <hr />

        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Mail" class="control-label"></label>
                <input asp-for="Mail" class="form-control" />
                <span asp-validation-for="Mail" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>

        <span class="alert-success">@ViewBag.Mensaje</span>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
