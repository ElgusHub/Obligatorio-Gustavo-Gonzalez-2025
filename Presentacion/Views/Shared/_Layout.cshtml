<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Presentacion</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Presentacion.styles.css" asp-append-version="true" />

    <style>
        body {
            background: linear-gradient(135deg, #0f172a, #1e293b);
            font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
            color: #e5e7eb;
        }

        /* Navbar principal */
        .main-navbar {
            background: rgba(15, 23, 42, 0.97);
            border-bottom: 1px solid rgba(30, 64, 175, 0.7);
            box-shadow: 0 12px 30px rgba(15, 23, 42, 0.9);
        }

            .main-navbar .navbar-brand {
                color: #e5e7eb !important;
                font-weight: 600;
                letter-spacing: 0.05em;
                text-transform: uppercase;
                font-size: 0.95rem;
            }

                .main-navbar .navbar-brand:hover {
                    color: #bfdbfe !important;
                }

            .main-navbar .nav-link {
                color: #9ca3af !important;
                font-size: 0.9rem;
                font-weight: 500;
                padding-inline: 0.9rem;
            }

                .main-navbar .nav-link:hover {
                    color: #e5e7eb !important;
                }

                .main-navbar .nav-link.active {
                    color: #bfdbfe !important;
                }

            .main-navbar .navbar-toggler {
                border-color: rgba(148, 163, 184, 0.5);
            }

            .main-navbar .navbar-toggler-icon {
                filter: invert(1);
            }

        /* Contenedor principal */
        .app-container {
            padding-top: 20px;
            padding-bottom: 30px;
        }

        main.pb-3 {
            color: #e5e7eb;
        }

        /* Alerts globales */
        .alert-danger {
            background: rgba(239, 68, 68, 0.15);
            border-color: rgba(248, 113, 113, 0.7);
            color: #fecaca;
            border-radius: 12px;
        }

        .alert-success {
            background: rgba(34, 197, 94, 0.15);
            border-color: rgba(34, 197, 94, 0.6);
            color: #bbf7d0;
            border-radius: 12px;
        }

        /* Footer */
        footer.footer {
            background: rgba(15, 23, 42, 0.98);
            border-top: 1px solid rgba(30, 64, 175, 0.7);
            color: #9ca3af;
        }

            footer.footer a {
                color: #93c5fd;
                text-decoration: none;
            }

                footer.footer a:hover {
                    color: #bfdbfe;
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm main-navbar mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Presentacion</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        @if (Context.Session.GetString("Rol") == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="Login">Login</a>
                            </li>
                        }
                        @if (Context.Session.GetString("Rol") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="Logout">Logout</a>
                            </li>
                        }

                        @if (Context.Session.GetString("Rol") != null && Context.Session.GetString("Rol") == "Empleado" || Context.Session.GetString("Rol") == "Gerente")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Pago" asp-action="PagosPorUsuario">Obtener mis pagos</a>
                            </li>
                        }

                        @if (Context.Session.GetString("Rol") != null && Context.Session.GetString("Rol") == "Gerente")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Pago" asp-action="EquiposPorPagosMayorA">Equipos por monto mayor A</a>
                            </li>
                        }

                        @if (Context.Session.GetString("Rol") != null && Context.Session.GetString("Rol") == "Administrador")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="Index">Lista de usuarios</a>
                            </li>
                        }

                        @if (Context.Session.GetString("Rol") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Pago" asp-action="PagoUnico">Alta de Pago único</a>
                            </li>
                        }
                        @if (Context.Session.GetString("Rol") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Pago" asp-action="PagoRecurrente">Alta de Pago recurrente</a>
                            </li>
                        }

                        @if (Context.Session.GetString("Rol") != null && Context.Session.GetString("Rol") == "Administrador")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="TipoGasto" asp-action="Index">Listado de Tipo de Gastos</a>
                            </li>
                        }

                        @*  @if (Context.Session.GetString("Rol") != null && Context.Session.GetString("Rol") == "Gerente" || Context.Session.GetString("Rol") == "Administrador")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Usuario" asp-action="Create">Alta de Usuario</a>
                            </li>
                        } *@
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container app-container">

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger text-center mt-3">
                @TempData["Error"]
            </div>
        }

        @if (TempData["Exito"] != null)
        {
            <div class="alert alert-success text-center mt-3">
                @TempData["Exito"]
            </div>
        }

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container py-2">
            &copy; 2025 - Presentacion - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
