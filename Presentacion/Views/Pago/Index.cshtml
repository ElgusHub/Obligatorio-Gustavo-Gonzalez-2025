@model IEnumerable<Web.Models.DTOs.PagoDTO.ListadoPagoDTO>

@{
    ViewData["Title"] = "Index";
}

<style>
    body {
        background: linear-gradient(135deg, #0f172a, #1e293b);
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
    }

    .pagos-container {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        min-height: 80vh;
        padding: 30px 20px;
    }

    .pagos-card {
        width: 100%;
        max-width: 1100px;
        background: #0b1120;
        padding: 25px 24px 20px;
        border-radius: 18px;
        box-shadow: 0 20px 40px rgba(15, 23, 42, 0.75);
        border: 1px solid rgba(148, 163, 184, 0.18);
        color: #e5e7eb;
    }

    .pagos-header {
        display: flex;
        justify-content: space-between;
        align-items: baseline;
        gap: 10px;
        margin-bottom: 15px;
        flex-wrap: wrap;
    }

        .pagos-header h1 {
            margin: 0;
            font-size: 1.6rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: #f9fafb;
        }

    .pagos-subtitle {
        font-size: 0.9rem;
        color: #9ca3af;
        margin-top: 4px;
    }

    .pagos-badge {
        padding: 4px 10px;
        border-radius: 999px;
        font-size: 0.75rem;
        border: 1px solid rgba(96, 165, 250, 0.7);
        color: #bfdbfe;
        background: radial-gradient(circle at top left, rgba(59, 130, 246, 0.2), transparent);
        white-space: nowrap;
        align-self: center;
    }

    .pagos-table-wrapper {
        margin-top: 8px;
        border-radius: 14px;
        border: 1px solid rgba(31, 41, 55, 0.9);
        background: radial-gradient(circle at top, rgba(148, 163, 184, 0.08), transparent);
        overflow-x: auto;
    }

    table.table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 6px;
        margin: 0;
        font-size: 0.9rem;
    }

        table.table thead tr {
            background: rgba(15, 23, 42, 0.95);
        }

        table.table thead th {
            padding: 10px 14px;
            text-transform: uppercase;
            font-size: 0.72rem;
            letter-spacing: 0.07em;
            font-weight: 600;
            color: #9ca3af;
            border-bottom: 1px solid rgba(55, 65, 81, 0.9);
            white-space: nowrap;
        }

        table.table tbody tr {
            background: rgba(15, 23, 42, 0.95);
            box-shadow: 0 1px 0 rgba(15, 23, 42, 0.7);
            transition: transform 0.15s ease, box-shadow 0.15s ease, background 0.15s ease;
        }

            table.table tbody tr:hover {
                background: rgba(30, 64, 175, 0.55);
                transform: translateY(-1px);
                box-shadow: 0 4px 12px rgba(15, 23, 42, 0.8);
            }

        table.table tbody td {
            padding: 9px 14px;
            border-bottom: 1px solid rgba(31, 41, 55, 0.7);
            color: #e5e7eb;
            vertical-align: middle;
            white-space: nowrap;
        }

        table.table tbody tr:last-child td {
            border-bottom: none;
        }

        table.table tbody td:nth-child(1) {
            font-weight: 600;
            color: #bfdbfe;
            font-size: 0.88rem;
        }

        table.table tbody td:nth-child(8) {
            font-weight: 600;
            text-align: right;
        }

        table.table tbody td:nth-child(3),
        table.table tbody td:nth-child(4) {
            font-size: 0.85rem;
            color: #d1d5db;
        }

        table.table tbody td:last-child {
            text-align: right;
        }

    .alert-danger {
        display: inline-block;
        margin-top: 12px;
        padding: 6px 10px;
        border-radius: 10px;
        background: rgba(239, 68, 68, 0.08);
        color: #fecaca;
        border: 1px solid rgba(248, 113, 113, 0.4);
        font-size: 0.82rem;
    }

    @($"@media") (max-width: 768px) {
        .pagos-card

    {
        padding: 18px 14px 14px;
        border-radius: 0.75rem;
    }

    .pagos-header h1 {
        font-size: 1.2rem;
    }

    table.table thead th {
        font-size: 0.7rem;
        padding: 8px 10px;
    }

    table.table tbody td {
        font-size: 0.8rem;
        padding: 8px 10px;
    }

    }
</style>

<div class="pagos-container">
    <div class="pagos-card">
        <div class="pagos-header">
            <div>
                <h1>Lista de Pagos</h1>
                <p class="pagos-subtitle">Resumen de todos los pagos registrados en el sistema</p>
            </div>
            <span class="pagos-badge">
                @Model?.Count() pagos encontrados
            </span>
        </div>

        <div class="pagos-table-wrapper">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.IdPago)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DescripcionPago)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NombreUsuario)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RolUsuario)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TipoPago)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DescTipoPago)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MetodoPago)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Montopago)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdPago)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DescripcionPago)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NombreUsuario)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RolUsuario)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TipoPago)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DescTipoPago)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MetodoPago)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Montopago)
                            </td>
                            <td>
                                @* @Html.ActionLink("Edit", "Edit", new {id=item.IdPago}) | *@
                                @* @Html.ActionLink("Details", "Details", new { id = item.IdPago }) | *@
                                @* @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ }) *@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <span class="alert-danger">@ViewBag.Mensaje</span>
    </div>
</div>
