@model IEnumerable<Web.Models.DTOs.PagoDTO.ListaPagosPorUsuarioDTO>

@{
    ViewData["Title"] = "PagosPorUsuario";
}

<style>
    body {
        background: linear-gradient(135deg, #0f172a, #1e293b);
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
        color: #e5e7eb;
    }

    .pagouser-container {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        min-height: 80vh;
        padding: 30px 20px;
    }

    .pagouser-card {
        width: 100%;
        max-width: 1200px;
        background: #0b1120;
        padding: 28px 26px;
        border-radius: 18px;
        box-shadow: 0 20px 45px rgba(15,23,42,0.85);
        border: 1px solid rgba(148,163,184,0.18);
        color: #e5e7eb;
    }

    .pagouser-header {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        margin-bottom: 18px;
        gap: 10px;
    }

        .pagouser-header h1 {
            font-size: 1.6rem;
            margin: 0;
            text-transform: uppercase;
            letter-spacing: .05em;
            color: #f9fafb;
        }

    .pagouser-badge {
        padding: 4px 10px;
        border-radius: 999px;
        background: radial-gradient(circle at top left, rgba(59,130,246,.2), transparent);
        border: 1px solid rgba(96,165,250,.6);
        color: #bfdbfe;
        font-size: .78rem;
        align-self: center;
        white-space: nowrap;
    }

    .pagouser-table-wrapper {
        margin-top: 8px;
        border-radius: 14px;
        border: 1px solid rgba(31,41,55,0.9);
        background: radial-gradient(circle at top, rgba(148,163,184,0.08), transparent);
        overflow-x: auto;
    }

    table.table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 6px;
        font-size: 0.85rem;
    }

        table.table thead tr {
            background: rgba(15,23,42,0.95);
        }

        table.table thead th {
            padding: 10px 12px;
            text-transform: uppercase;
            font-size: 0.65rem;
            letter-spacing: 0.07em;
            font-weight: 600;
            color: #9ca3af;
            border-bottom: 1px solid rgba(55,65,81,0.9);
            white-space: nowrap;
        }

        table.table tbody tr {
            background: rgba(15,23,42,0.95);
            transition: background .15s ease, transform .15s ease, box-shadow .15s ease;
        }

            table.table tbody tr:hover {
                background: rgba(30,64,175,0.55);
                transform: translateY(-1px);
                box-shadow: 0 3px 10px rgba(15,23,42,0.8);
            }

        table.table tbody td {
            padding: 9px 12px;
            border-bottom: 1px solid rgba(31,41,55,0.7);
            color: #e5e7eb;
            white-space: nowrap;
        }

        table.table tbody tr:last-child td {
            border-bottom: none;
        }

        table.table tbody td:nth-child(1),
        table.table tbody td:nth-child(7),
        table.table tbody td:nth-child(8) {
            font-weight: 600;
            color: #bfdbfe;
        }
</style>

<div class="pagouser-container">
    <div class="pagouser-card">

        <div class="pagouser-header">
            <h1>Su lista de pagos</h1>
            <span class="pagouser-badge">@Model?.Count() pagos</span>
        </div>

        <div class="pagouser-table-wrapper">
            <table class="table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Id)</th>
                        <th>@Html.DisplayNameFor(model => model.NombreUsuario)</th>
                        <th>@Html.DisplayNameFor(model => model.NombreMetodoPago)</th>
                        <th>@Html.DisplayNameFor(model => model.NombreTipoGasto)</th>
                        <th>@Html.DisplayNameFor(model => model.NombreGasto)</th>
                        <th>@Html.DisplayNameFor(model => model.FechaCompra)</th>
                        <th>@Html.DisplayNameFor(model => model.ValorCompra)</th>
                        <th>@Html.DisplayNameFor(model => model.SaldoPendiente)</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Id)</td>
                            <td>@Html.DisplayFor(modelItem => item.NombreUsuario)</td>
                            <td>@Html.DisplayFor(modelItem => item.NombreMetodoPago)</td>
                            <td>@Html.DisplayFor(modelItem => item.NombreTipoGasto)</td>
                            <td>@Html.DisplayFor(modelItem => item.NombreGasto)</td>
                            <td>@Html.DisplayFor(modelItem => item.FechaCompra)</td>
                            <td>@Html.DisplayFor(modelItem => item.ValorCompra)</td>
                            <td>@Html.DisplayFor(modelItem => item.SaldoPendiente)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
