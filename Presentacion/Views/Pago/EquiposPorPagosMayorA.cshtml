@model Web.Models.DTOs.PagoDTO.MontoPagoEquiposDTO

@{
    ViewData["Title"] = "EquiposPorPagosMayorA";
}

<style>
    body {
        background: linear-gradient(135deg, #0f172a, #1e293b);
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
        color: #e5e7eb;
    }

    .equipos-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 75vh;
        padding-top: 20px;
        padding-bottom: 20px;
    }

    .equipos-card {
        width: 100%;
        max-width: 400px;
        background: #0b1120;
        padding: 32px;
        border-radius: 18px;
        box-shadow: 0 20px 40px rgba(15, 23, 42, 0.75);
        border: 1px solid rgba(148, 163, 184, 0.2);
        color: #e5e7eb;
    }

        .equipos-card h1 {
            text-align: center;
            margin-bottom: 6px;
            font-size: 1.55rem;
            text-transform: uppercase;
            letter-spacing: 0.06em;
            color: #f9fafb;
        }

    .equipos-subtitle {
        text-align: center;
        color: #9ca3af;
        margin-bottom: 18px;
        font-size: 0.9rem;
    }

    hr {
        border-color: rgba(148, 163, 184, 0.25);
        margin-bottom: 20px;
    }

    .form-group label {
        color: #d1d5db !important;
        margin-bottom: 6px;
        font-size: 0.9rem;
    }

    .form-control {
        background: #1e293b;
        border: 1px solid rgba(148, 163, 184, 0.3);
        color: #f1f5f9;
        border-radius: 10px;
        padding: 10px;
        font-size: 0.95rem;
    }

        .form-control:focus {
            background: #1e293b;
            border-color: #60a5fa;
            box-shadow: 0 0 0 2px rgba(96,165,250,.3);
            color: #fff;
        }

    .btn-primary {
        width: 100%;
        padding: 10px;
        border-radius: 12px;
        background: linear-gradient(135deg, #2563eb, #1d4ed8);
        border: none;
        box-shadow: 0 4px 12px rgba(37, 99, 235, 0.4);
        font-weight: 600;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #1d4ed8, #1e40af);
        }

    .text-danger {
        font-size: 0.85rem;
    }
</style>

<div class="equipos-container">
    <div class="equipos-card">

        <h1>Equipos</h1>
        <p class="equipos-subtitle">Consultar equipos con pagos mayores al monto indicado</p>
        <hr />

        <form asp-action="EquiposPorPagosMayorA">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Monto" class="control-label"></label>
                <input asp-for="Monto" class="form-control" required />
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Solicitar" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
