@model IEnumerable<Web.Models.DTOs.PagoDTO.EquiposPorPagosDTO>

@{
    ViewData["Title"] = "VistaEquipos";
}

<style>
    body {
        background: linear-gradient(135deg, #0f172a, #1e293b);
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
        color: #e5e7eb;
    }

    .equiposlista-container {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        min-height: 80vh;
        padding: 30px 20px;
    }

    .equiposlista-card {
        width: 100%;
        max-width: 900px;
        background: #0b1120;
        padding: 28px 26px;
        border-radius: 18px;
        box-shadow: 0 20px 45px rgba(15,23,42,0.85);
        border: 1px solid rgba(148,163,184,0.18);
        color: #e5e7eb;
    }

    .equiposlista-header {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        margin-bottom: 18px;
        gap: 10px;
    }

        .equiposlista-header h1 {
            font-size: 1.6rem;
            margin: 0;
            text-transform: uppercase;
            letter-spacing: .05em;
            color: #f9fafb;
        }

    .equiposlista-badge {
        padding: 4px 10px;
        border-radius: 999px;
        border: 1px solid rgba(96,165,250,0.6);
        background: radial-gradient(circle at top left, rgba(59,130,246,0.25), transparent);
        color: #bfdbfe;
        font-size: .78rem;
        white-space: nowrap;
        align-self: center;
    }

    .equiposlista-table-wrapper {
        margin-top: 8px;
        border-radius: 14px;
        border: 1px solid rgba(31,41,55,0.9);
        background: radial-gradient(circle at top, rgba(148,163,184,0.08), transparent);
        overflow-x: auto;
    }

    table.table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 6px;
        font-size: 0.9rem;
    }

        table.table thead tr {
            background: rgba(15,23,42,0.95);
        }

        table.table thead th {
            padding: 10px 12px;
            text-transform: uppercase;
            font-size: .7rem;
            letter-spacing: 0.07em;
            font-weight: 700;
            color: #f1f5f9;
            border-bottom: 1px solid rgba(55,65,81,0.9);
            white-space: nowrap;
        }

        /* Filas */
        table.table tbody tr {
            background: rgba(15,23,42,0.97);
            transition: background .15s ease, transform .15s ease, box-shadow .15s ease;
        }

        /* Texto súper legible */
        table.table tbody td {
            padding: 9px 12px;
            border-bottom: 1px solid rgba(31,41,55,0.7);
            color: #f8fafc !important; /* blanco muy claro */
            font-weight: 500;
            white-space: nowrap;
        }

        table.table tbody tr:last-child td {
            border-bottom: none;
        }

        /* Hover claro con texto blanco */
        table.table tbody tr:hover {
            background: rgba(59,130,246,0.25) !important;
            transform: translateY(-1px);
            box-shadow: 0 3px 10px rgba(15,23,42,0.75);
        }

            table.table tbody tr:hover td {
                color: #ffffff !important;
            }

        /* Resaltar columnas clave */
        table.table tbody td:nth-child(1) {
            font-weight: 600;
            color: #bae6fd;
        }

    @($"@media") (max-width: 768px) {
        .equiposlista-card

    {
        padding: 20px 14px;
    }

    .equiposlista-header h1 {
        font-size: 1.2rem;
    }

    }
</style>

<div class="equiposlista-container">
    <div class="equiposlista-card">

        <div class="equiposlista-header">
            <h1>Equipos con pagos únicos mayores al monto</h1>
            <span class="equiposlista-badge">@Model?.Count() equipos</span>
        </div>

        <div class="equiposlista-table-wrapper">
            <table class="table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.EquipoId)</th>
                        <th>@Html.DisplayNameFor(model => model.EquipoNombre)</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.EquipoId)</td>
                            <td>@Html.DisplayFor(modelItem => item.EquipoNombre)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
