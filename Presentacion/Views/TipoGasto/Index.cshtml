@model IEnumerable<Web.Models.DTOs.TipoGastoDTOs.ListadoTipoGastoDTO>

@{
    ViewData["Title"] = "Index";
}

<style>
    body {
        background: linear-gradient(135deg, #0f172a, #1e293b);
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
        color: #e5e7eb;
    }

    .tg-container {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        min-height: 80vh;
        padding: 30px 20px;
    }

    .tg-card {
        width: 100%;
        max-width: 950px;
        background: #0b1120;
        padding: 28px 25px;
        border-radius: 18px;
        box-shadow: 0 20px 40px rgba(15, 23, 42, 0.85);
        border: 1px solid rgba(148, 163, 184, 0.18);
        color: #e5e7eb;
    }

    .tg-header {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        margin-bottom: 18px;
        gap: 10px;
    }

        .tg-header h1 {
            font-size: 1.6rem;
            margin: 0;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: #f9fafb;
        }

    .tg-badge {
        padding: 4px 10px;
        border-radius: 999px;
        border: 1px solid rgba(96,165,250,0.6);
        color: #bfdbfe;
        background: radial-gradient(circle at top left, rgba(59,130,246,0.2), transparent);
        font-size: 0.75rem;
        align-self: center;
    }

    .tg-table-wrapper {
        margin-top: 8px;
        border-radius: 14px;
        border: 1px solid rgba(31,41,55,0.9);
        background: radial-gradient(circle at top, rgba(148,163,184,0.08), transparent);
        overflow-x: auto;
    }

    table.table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 6px;
        font-size: 0.9rem;
    }

        table.table thead tr {
            background: rgba(15,23,42,0.95);
        }

        table.table thead th {
            padding: 10px 14px;
            text-transform: uppercase;
            font-size: 0.7rem;
            letter-spacing: 0.07em;
            font-weight: 600;
            color: #9ca3af;
            border-bottom: 1px solid rgba(55,65,81,0.9);
        }

        table.table tbody tr {
            background: rgba(15,23,42,0.95);
            transition: transform .15s ease, background .15s ease, box-shadow .15s ease;
        }

            table.table tbody tr:hover {
                background: rgba(30,64,175,0.55);
                transform: translateY(-1px);
                box-shadow: 0 3px 10px rgba(15,23,42,0.8);
            }

        table.table tbody td {
            padding: 9px 14px;
            border-bottom: 1px solid rgba(31,41,55,0.7);
            color: #e5e7eb;
            white-space: nowrap;
        }

        table.table tbody tr:last-child td {
            border-bottom: none;
        }

        table.table tbody td:nth-child(1) {
            font-weight: 600;
            color: #bfdbfe;
        }

    a {
        color: #93c5fd;
        text-decoration: none;
        font-weight: 600;
    }

        a:hover {
            color: #bfdbfe;
            text-decoration: underline;
        }
</style>

<div class="tg-container">
    <div class="tg-card">

        <div class="tg-header">
            <h1>Tipo de Gastos</h1>
            <span class="tg-badge">@Model?.Count() registros</span>
        </div>

        <div class="tg-table-wrapper">
            <table class="table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Id)</th>
                        <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                        <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Id)</td>
                            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                            <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                            <td>
                                @Html.ActionLink("Obtener auditoría", "AuditoriaTipoGasto", new { id = item.Id })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
