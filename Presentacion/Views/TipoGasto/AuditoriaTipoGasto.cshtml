@model IEnumerable<Web.Models.DTOs.AuditoriaDTO.AuditoriaDTO>

@{
    ViewData["Title"] = "AuditoriaTipoGasto";
}

<style>
    body {
        background: linear-gradient(135deg, #0f172a, #1e293b);
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
        color: #e5e7eb;
    }

    .audit-container {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        min-height: 80vh;
        padding: 30px 20px;
    }

    .audit-card {
        width: 100%;
        max-width: 1200px;
        background: #0b1120;
        padding: 28px 26px;
        border-radius: 18px;
        box-shadow: 0 20px 45px rgba(15, 23, 42, 0.85);
        border: 1px solid rgba(148,163,184,0.18);
        color: #e5e7eb;
    }

    .audit-header {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        margin-bottom: 18px;
        gap: 10px;
    }

        .audit-header h1 {
            font-size: 1.6rem;
            margin: 0;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: #f9fafb;
        }

    .audit-back {
        color: #93c5fd;
        text-decoration: none;
        font-weight: 600;
        margin-bottom: 12px;
        display: inline-block;
    }

        .audit-back:hover {
            color: #bfdbfe;
            text-decoration: underline;
        }

    .audit-table-wrapper {
        margin-top: 10px;
        border-radius: 14px;
        border: 1px solid rgba(31,41,55,0.9);
        background: radial-gradient(circle at top, rgba(148,163,184,0.08), transparent);
        overflow-x: auto;
    }

    table.table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 6px;
        font-size: 0.85rem;
    }

        table.table thead tr {
            background: rgba(15,23,42,0.95);
        }

        table.table thead th {
            padding: 10px 12px;
            text-transform: uppercase;
            font-size: 0.65rem;
            letter-spacing: 0.07em;
            font-weight: 600;
            color: #9ca3af;
            border-bottom: 1px solid rgba(55,65,81,0.9);
            white-space: nowrap;
        }

        table.table tbody tr {
            background: rgba(15,23,42,0.95);
            transition: transform .15s ease, background .15s ease, box-shadow .15s ease;
        }

            table.table tbody tr:hover {
                background: rgba(30,64,175,0.55);
                transform: translateY(-1px);
                box-shadow: 0 3px 10px rgba(15,23,42,0.8);
            }

        table.table tbody td {
            padding: 9px 12px;
            border-bottom: 1px solid rgba(31,41,55,0.7);
            color: #e5e7eb;
            white-space: nowrap;
        }

        table.table tbody tr:last-child td {
            border-bottom: none;
        }

        table.table tbody td:nth-child(1),
        table.table tbody td:nth-child(2) {
            font-weight: 600;
        }
</style>


<div class="audit-container">
    <div class="audit-card">

        <div class="audit-header">
            <h1>Auditoría Tipo de Gasto</h1>
        </div>

        <a asp-action="Index" class="audit-back">← Volver a la lista</a>

        <div class="audit-table-wrapper">
            <table class="table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Accion)</th>
                        <th>@Html.DisplayNameFor(model => model.Fecha)</th>
                        <th>@Html.DisplayNameFor(model => model.UsuarioId)</th>
                        <th>@Html.DisplayNameFor(model => model.NombreUsuario)</th>
                        <th>@Html.DisplayNameFor(model => model.Rol)</th>
                        <th>@Html.DisplayNameFor(model => model.TipoGastoId)</th>
                        <th>@Html.DisplayNameFor(model => model.TipoGastoNombre)</th>
                        <th>@Html.DisplayNameFor(model => model.DescripcionTipoGasto)</th>
                        <th>@Html.DisplayNameFor(model => model.Activo)</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Accion)</td>
                            <td>@Html.DisplayFor(modelItem => item.Fecha)</td>
                            <td>@Html.DisplayFor(modelItem => item.UsuarioId)</td>
                            <td>@Html.DisplayFor(modelItem => item.NombreUsuario)</td>
                            <td>@Html.DisplayFor(modelItem => item.Rol)</td>
                            <td>@Html.DisplayFor(modelItem => item.TipoGastoId)</td>
                            <td>@Html.DisplayFor(modelItem => item.TipoGastoNombre)</td>
                            <td>@Html.DisplayFor(modelItem => item.DescripcionTipoGasto)</td>
                            <td>@Html.DisplayFor(modelItem => item.Activo)</td>
                            <td></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
